{
  "scripts": {
    "build-pkg": "esbuild ./src/provider --external:react --loader:.js=jsx --bundle --minify --outfile=./dist/react/index.js",
    "build-universal-esm": "esbuild ./src/universal --format=esm --loader:.js=jsx --minify  --bundle --outfile=./dist/universal/index.min.mjs",
    "build-universal": "esbuild ./src/universal --format=iife --global-name=XELISPay --loader:.js=jsx --minify  --bundle --outfile=./dist/universal/index.min.js",
    "build": "npm run build-pkg && npm run build-universal-esm && npm run build-universal",
    "test-example": "http-server"
  },
  "dependencies": {
    "@xelis/sdk": "^0.9.8",
    "goober": "^2.1.14",
    "qrcode": "^1.5.3",
    "qrcode.react": "^3.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "esbuild": "^0.21.5"
  }
}
